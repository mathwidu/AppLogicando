<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Participação no Projeto"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="16dp" />

        <!-- Pergunta 1 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1. Quanto aos benefícios que o projeto proporciona, estou:" />
        <RadioGroup
            android:id="@+id/radioBeneficios"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton android:id="@+id/opcaoBeneficios1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="1 - Muito Insatisfeito" />
            <RadioButton android:id="@+id/opcaoBeneficios2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="2 - Insatisfeito" />
            <RadioButton android:id="@+id/opcaoBeneficios3" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="3 - Parcialmente Satisfeito" />
            <RadioButton android:id="@+id/opcaoBeneficios4" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="4 - Satisfeito" />
            <RadioButton android:id="@+id/opcaoBeneficios5" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="5 - Muito Satisfeito" />
            <RadioButton android:id="@+id/opcaoBeneficiosSCO" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="SCO - Sem condições de opinar" />
        </RadioGroup>

        <!-- Pergunta 2 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2. Quanto às possibilidades de troca de experiências e saberes com a equipe do projeto, estou:"
            android:layout_marginTop="16dp" />
        <RadioGroup
            android:id="@+id/radioTrocas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton android:id="@+id/opcaoTrocas1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="1 - Muito Insatisfeito" />
            <RadioButton android:id="@+id/opcaoTrocas2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="2 - Insatisfeito" />
            <RadioButton android:id="@+id/opcaoTrocas3" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="3 - Parcialmente Satisfeito" />
            <RadioButton android:id="@+id/opcaoTrocas4" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="4 - Satisfeito" />
            <RadioButton android:id="@+id/opcaoTrocas5" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="5 - Muito Satisfeito" />
            <RadioButton android:id="@+id/opcaoTrocasSCO" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="SCO - Sem condições de opinar" />
        </RadioGroup>

        <!-- Pergunta 3 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3. Quanto ao meu comprometimento para o desenvolvimento das atividades do projeto, estou:"
            android:layout_marginTop="16dp" />
        <RadioGroup
            android:id="@+id/radioComprometimento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton android:id="@+id/opcaoComp1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="1 - Muito Insatisfeito" />
            <RadioButton android:id="@+id/opcaoComp2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="2 - Insatisfeito" />
            <RadioButton android:id="@+id/opcaoComp3" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="3 - Parcialmente Satisfeito" />
            <RadioButton android:id="@+id/opcaoComp4" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="4 - Satisfeito" />
            <RadioButton android:id="@+id/opcaoComp5" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="5 - Muito Satisfeito" />
            <RadioButton android:id="@+id/opcaoCompSCO" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="SCO - Sem condições de opinar" />
        </RadioGroup>

        <!-- Pergunta 4 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="4. Quanto à possibilidade de participar do planejamento das ações/atividades do projeto, estou:"
            android:layout_marginTop="16dp" />
        <RadioGroup
            android:id="@+id/radioPlanejamento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton android:id="@+id/opcaoPlan1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="1 - Muito Insatisfeito" />
            <RadioButton android:id="@+id/opcaoPlan2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="2 - Insatisfeito" />
            <RadioButton android:id="@+id/opcaoPlan3" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="3 - Parcialmente Satisfeito" />
            <RadioButton android:id="@+id/opcaoPlan4" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="4 - Satisfeito" />
            <RadioButton android:id="@+id/opcaoPlan5" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="5 - Muito Satisfeito" />
            <RadioButton android:id="@+id/opcaoPlanSCO" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="SCO - Sem condições de opinar" />
        </RadioGroup>

        <!-- Comentários -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="5. Comentários e sugestões em relação à participação no projeto:"
            android:layout_marginTop="16dp" />
        <EditText
            android:id="@+id/editComentariosParticipacao"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:gravity="top"
            android:hint="Digite aqui..."
            android:inputType="textMultiLine" />

        <Button
            android:id="@+id/btnProximo2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Próximo"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            android:backgroundTint="#6200EE"
            android:textColor="#FFFFFF" />
    </LinearLayout>
</ScrollView>
