<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0B2C4B">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="32dp"
        android:layout_above="@+id/scrollHint">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Barra de Progresso -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Perguntas 2 de 3"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#D3DEE9"
                    android:layout_marginRight="12dp" />

                <ProgressBar
                    style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Horizontal"
                    android:layout_width="0dp"
                    android:layout_height="8dp"
                    android:layout_weight="1"
                    android:progress="66"
                    android:max="100"
                    android:progressTint="#4CAF50"
                    android:contentDescription="Progresso das perguntas: 2 de 3" />
            </LinearLayout>

            <!-- Título -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Participação no Projeto"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:layout_marginBottom="24dp" />

            <!-- Perguntas -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1. Quanto aos benefícios que o projeto proporciona, estou:"
                android:textSize="16sp"
                android:textColor="#D3DEE9"
                android:layout_marginBottom="8dp" />

            <RadioGroup
                android:id="@+id/radioBeneficios"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RadioButton android:id="@+id/opcaoBeneficios1" android:text="Muito Insatisfeito" style="@style/CustomRadioButton"/>
                <RadioButton android:id="@+id/opcaoBeneficios2" android:text="Insatisfeito" style="@style/CustomRadioButton"/>
                <RadioButton android:id="@+id/opcaoBeneficios3" android:text="Parcialmente Satisfeito" style="@style/CustomRadioButton"/>
                <RadioButton android:id="@+id/opcaoBeneficios4" android:text="Satisfeito" style="@style/CustomRadioButton"/>
                <RadioButton android:id="@+id/opcaoBeneficios5" android:text="Muito Satisfeito" style="@style/CustomRadioButton"/>
                <RadioButton android:id="@+id/opcaoBeneficiosSCO" android:text="Sem condições de opinar" style="@style/CustomRadioButton"/>
            </RadioGroup>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2. Quanto às trocas de experiências com a equipe, estou:"
                android:textSize="16sp"
                android:textColor="#D3DEE9"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp" />

            <RadioGroup
                android:id="@+id/radioTrocas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RadioButton android:id="@+id/opcaoTrocas1" android:text="Muito Insatisfeito" style="@style/CustomRadioButton"/>
                <RadioButton android:id="@+id/opcaoTrocas2" android:text="Insatisfeito" style="@style/CustomRadioButton"/>
                <RadioButton android:id="@+id/opcaoTrocas3" android:text="Parcialmente Satisfeito" style="@style/CustomRadioButton"/>
                <RadioButton android:id="@+id/opcaoTrocas4" android:text="Satisfeito" style="@style/CustomRadioButton"/>
                <RadioButton android:id="@+id/opcaoTrocas5" android:text="Muito Satisfeito" style="@style/CustomRadioButton"/>
                <RadioButton android:id="@+id/opcaoTrocasSCO" android:text="Sem condições de opinar" style="@style/CustomRadioButton"/>
            </RadioGroup>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3. Quanto ao meu comprometimento nas atividades, estou:"
                android:textSize="16sp"
                android:textColor="#D3DEE9"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp" />

            <RadioGroup
                android:id="@+id/radioComprometimento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RadioButton android:id="@+id/opcaoComp1" android:text="Muito Insatisfeito" style="@style/CustomRadioButton"/>
                <RadioButton android:id="@+id/opcaoComp2" android:text="Insatisfeito" style="@style/CustomRadioButton"/>
                <RadioButton android:id="@+id/opcaoComp3" android:text="Parcialmente Satisfeito" style="@style/CustomRadioButton"/>
                <RadioButton android:id="@+id/opcaoComp4" android:text="Satisfeito" style="@style/CustomRadioButton"/>
                <RadioButton android:id="@+id/opcaoComp5" android:text="Muito Satisfeito" style="@style/CustomRadioButton"/>
                <RadioButton android:id="@+id/opcaoCompSCO" android:text="Sem condições de opinar" style="@style/CustomRadioButton"/>
            </RadioGroup>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="4. Quanto à minha participação no planejamento, estou:"
                android:textSize="16sp"
                android:textColor="#D3DEE9"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp" />

            <RadioGroup
                android:id="@+id/radioPlanejamento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RadioButton android:id="@+id/opcaoPlan1" android:text="Muito Insatisfeito" style="@style/CustomRadioButton"/>
                <RadioButton android:id="@+id/opcaoPlan2" android:text="Insatisfeito" style="@style/CustomRadioButton"/>
                <RadioButton android:id="@+id/opcaoPlan3" android:text="Parcialmente Satisfeito" style="@style/CustomRadioButton"/>
                <RadioButton android:id="@+id/opcaoPlan4" android:text="Satisfeito" style="@style/CustomRadioButton"/>
                <RadioButton android:id="@+id/opcaoPlan5" android:text="Muito Satisfeito" style="@style/CustomRadioButton"/>
                <RadioButton android:id="@+id/opcaoPlanSCO" android:text="Sem condições de opinar" style="@style/CustomRadioButton"/>
            </RadioGroup>

            <!-- Comentários -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Comentários e sugestões sobre sua participação:"
                android:textSize="16sp"
                android:textColor="#D3DEE9"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="* Esta pergunta é opcional"
                android:textSize="12sp"
                android:textColor="#B0C4DE"
                android:gravity="end"
                android:layout_marginBottom="4dp" />

            <EditText
                android:id="@+id/editComentariosParticipacao"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:hint="Digite aqui..."
                android:gravity="top"
                android:background="#1A3D5A"
                android:textColor="#FFFFFF"
                android:textColorHint="#B0C4DE"
                android:textSize="15sp"
                android:padding="12dp"
                android:elevation="2dp"
                android:inputType="textMultiLine"
                android:contentDescription="Campo para comentários e sugestões sobre a participação" />

            <!-- Botão Próximo -->
            <Button
                android:id="@+id/btnProximo2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Próximo"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_marginTop="32dp"
                android:background="@drawable/bg_botao_arredondado"
                android:textColor="#FFFFFF"
                android:paddingLeft="32dp"
                android:paddingRight="32dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:elevation="6dp" />
        </LinearLayout>
    </ScrollView>

    <!-- Indicação para rolar -->
    <TextView
        android:id="@+id/scrollHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Role para ver mais"
        android:textColor="#AAAAAA"
        android:textSize="12sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="12dp" />
</RelativeLayout>
