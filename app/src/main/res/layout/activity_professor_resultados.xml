<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutPrincipal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#0B2C4B"
    android:padding="24dp">

    <!-- Botão de ajuda no canto superior direito -->
    <Button
        android:id="@+id/btnAjudaGrafico"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="?"
        android:textSize="18sp"
        android:layout_gravity="end"
        android:textColor="#FFFFFF"
        android:backgroundTint="#1976D2"
        android:minWidth="48dp"
        android:minHeight="48dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="4dp" />

    <!-- Título geral -->
    <TextView
        android:id="@+id/tituloProfessor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Respostas Coletadas"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="4dp" />

    <!-- Título da pergunta -->
    <TextView
        android:id="@+id/txtTituloPergunta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pergunta: ..."
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="12dp" />

    <!-- Gráfico de barras -->
    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/barChart"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="12dp" />

    <!-- Legenda colorida -->
    <LinearLayout
        android:id="@+id/layoutLegenda"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp" />

    <!-- Navegação entre perguntas -->
    <LinearLayout
        android:id="@+id/layoutNavegacao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="12dp">

        <Button
            android:id="@+id/btnAnterior"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Anterior"
            android:backgroundTint="#6666FF"
            android:textColor="#FFFFFF"
            android:layout_marginEnd="16dp"
            android:padding="12dp" />

        <Button
            android:id="@+id/btnProximo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Próximo"
            android:backgroundTint="#00BCD4"
            android:textColor="#FFFFFF"
            android:padding="12dp" />
    </LinearLayout>

    <!-- Botões de exportar e reiniciar -->
    <LinearLayout
        android:id="@+id/layoutBotoes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/btnExportar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Exportar"
            android:backgroundTint="#2196F3"
            android:textColor="#FFFFFF"
            android:layout_marginEnd="16dp"
            android:padding="12dp" />

        <Button
            android:id="@+id/btnReiniciar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reiniciar"
            android:backgroundTint="#F44336"
            android:textColor="#FFFFFF"
            android:padding="12dp" />
    </LinearLayout>

    <!-- Botão Ver Comentários -->
    <Button
        android:id="@+id/btnVerComentarios"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ver Comentários"
        android:backgroundTint="#FFC107"
        android:textColor="#000000"
        android:layout_gravity="center_horizontal"
        android:padding="12dp"
        android:elevation="4dp" />

</LinearLayout>
