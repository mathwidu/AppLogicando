<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0B2C4B"
    android:padding="32dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_centerInParent="true">

        <!-- Ícone de sucesso -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🎉"
            android:textSize="48sp"
            android:layout_marginBottom="24dp"
            android:contentDescription="Emoji de comemoração" />

        <!-- Mensagem de agradecimento -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Obrigado pela sua participação!"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- Subtexto -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sua resposta foi registrada com sucesso."
            android:textSize="16sp"
            android:textColor="#D3DEE9"
            android:gravity="center"
            android:layout_marginBottom="32dp" />

        <!-- Botão Voltar ao Início -->
        <Button
            android:id="@+id/btnVoltarInicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Voltar ao Início"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@drawable/bg_botao_arredondado"
            android:textColor="#FFFFFF"
            android:paddingLeft="32dp"
            android:paddingRight="32dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:elevation="6dp"
            android:layout_marginBottom="16dp"
            android:contentDescription="Botão para voltar à tela inicial" />

        <!-- Botão Avaliar App -->
        <Button
            android:id="@+id/btnFeedbackApp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Por favor Avalie esse APP"
            android:textSize="16sp"
            android:textStyle="bold"
            android:backgroundTint="#2196F3"
            android:textColor="#FFFFFF"
            android:paddingLeft="32dp"
            android:paddingRight="32dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:elevation="6dp"
            android:contentDescription="Botão para avaliar o aplicativo" />
    </LinearLayout>
</RelativeLayout>
