<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0B2C4B">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="32dp">

        <!-- Título -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Avaliação do Aplicativo"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Pergunta 1 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1. A navegação entre as telas foi fácil e intuitiva?"
            android:textColor="#D3DEE9" />

        <RadioGroup
            android:id="@+id/radioNavegacao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton android:id="@+id/opcaoNav1" android:text="Muito Insatisfeito" style="@style/CustomRadioButton"/>
            <RadioButton android:id="@+id/opcaoNav2" android:text="Insatisfeito" style="@style/CustomRadioButton"/>
            <RadioButton android:id="@+id/opcaoNav3" android:text="Parcialmente Satisfeito" style="@style/CustomRadioButton"/>
            <RadioButton android:id="@+id/opcaoNav4" android:text="Satisfeito" style="@style/CustomRadioButton"/>
            <RadioButton android:id="@+id/opcaoNav5" android:text="Muito Satisfeito" style="@style/CustomRadioButton"/>
            <RadioButton android:id="@+id/opcaoNavSCO" android:text="Sem condições de opinar" style="@style/CustomRadioButton"/>
        </RadioGroup>

        <!-- Pergunta 2 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2. O visual do aplicativo é agradável?"
            android:textColor="#D3DEE9"
            android:layout_marginTop="16dp" />
        <RadioGroup
            android:id="@+id/radioVisual"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton android:id="@+id/opcaoVisual1" android:text="Muito Insatisfeito" style="@style/CustomRadioButton"/>
            <RadioButton android:id="@+id/opcaoVisual2" android:text="Insatisfeito" style="@style/CustomRadioButton"/>
            <RadioButton android:id="@+id/opcaoVisual3" android:text="Parcialmente Satisfeito" style="@style/CustomRadioButton"/>
            <RadioButton android:id="@+id/opcaoVisual4" android:text="Satisfeito" style="@style/CustomRadioButton"/>
            <RadioButton android:id="@+id/opcaoVisual5" android:text="Muito Satisfeito" style="@style/CustomRadioButton"/>
            <RadioButton android:id="@+id/opcaoVisualSCO" android:text="Sem condições de opinar" style="@style/CustomRadioButton"/>
        </RadioGroup>

        <!-- Pergunta 3 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3. O aplicativo funcionou sem travamentos ou lentidão?"
            android:textColor="#D3DEE9"
            android:layout_marginTop="16dp" />
        <RadioGroup
            android:id="@+id/radioDesempenho"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton android:id="@+id/opcaoDesempenho1" android:text="Muito Insatisfeito" style="@style/CustomRadioButton"/>
            <RadioButton android:id="@+id/opcaoDesempenho2" android:text="Insatisfeito" style="@style/CustomRadioButton"/>
            <RadioButton android:id="@+id/opcaoDesempenho3" android:text="Parcialmente Satisfeito" style="@style/CustomRadioButton"/>
            <RadioButton android:id="@+id/opcaoDesempenho4" android:text="Satisfeito" style="@style/CustomRadioButton"/>
            <RadioButton android:id="@+id/opcaoDesempenho5" android:text="Muito Satisfeito" style="@style/CustomRadioButton"/>
            <RadioButton android:id="@+id/opcaoDesempenhoSCO" android:text="Sem condições de opinar" style="@style/CustomRadioButton"/>
        </RadioGroup>

        <!-- Pergunta 4 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="4. O que você mais gostou no aplicativo?"
            android:textColor="#D3DEE9"
            android:layout_marginTop="16dp" />
        <EditText
            android:id="@+id/editGostou"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:hint="Digite aqui..."
            android:gravity="top"
            android:background="#1A3D5A"
            android:textColor="#FFFFFF"
            android:textColorHint="#B0C4DE"
            android:textSize="15sp"
            android:padding="12dp"
            android:inputType="textMultiLine" />

        <!-- Pergunta 5 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="5. O que você mudaria ou melhoraria?"
            android:textColor="#D3DEE9"
            android:layout_marginTop="16dp" />
        <EditText
            android:id="@+id/editMelhorias"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:hint="Digite aqui..."
            android:gravity="top"
            android:background="#1A3D5A"
            android:textColor="#FFFFFF"
            android:textColorHint="#B0C4DE"
            android:textSize="15sp"
            android:padding="12dp"
            android:inputType="textMultiLine" />

        <!-- Botão Enviar -->
        <Button
            android:id="@+id/btnEnviarFeedback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enviar Avaliação"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            android:background="@drawable/bg_botao_arredondado"
            android:textColor="#FFFFFF"
            android:paddingLeft="32dp"
            android:paddingRight="32dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:elevation="6dp"
            android:contentDescription="Botão para enviar a avaliação do app" />
    </LinearLayout>
</ScrollView>
