<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Título -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Avaliação do Aplicativo"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="16dp" />

        <!-- Pergunta 1 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1. A navegação entre as telas foi fácil e intuitiva?" />

        <RadioGroup
            android:id="@+id/radioNavegacao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton android:id="@+id/opcaoNav1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="1 - Muito Insatisfeito"/>
            <RadioButton android:id="@+id/opcaoNav2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="2 - Insatisfeito"/>
            <RadioButton android:id="@+id/opcaoNav3" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="3 - Parcialmente Satisfeito"/>
            <RadioButton android:id="@+id/opcaoNav4" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="4 - Satisfeito"/>
            <RadioButton android:id="@+id/opcaoNav5" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="5 - Muito Satisfeito"/>
            <RadioButton android:id="@+id/opcaoNavSCO" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="SCO - Sem condições de opinar"/>
        </RadioGroup>

        <!-- Pergunta 2 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2. O visual do aplicativo é agradável?"
            android:layout_marginTop="16dp" />
        <RadioGroup
            android:id="@+id/radioVisual"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton android:id="@+id/opcaoVisual1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="1 - Muito Insatisfeito"/>
            <RadioButton android:id="@+id/opcaoVisual2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="2 - Insatisfeito"/>
            <RadioButton android:id="@+id/opcaoVisual3" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="3 - Parcialmente Satisfeito"/>
            <RadioButton android:id="@+id/opcaoVisual4" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="4 - Satisfeito"/>
            <RadioButton android:id="@+id/opcaoVisual5" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="5 - Muito Satisfeito"/>
            <RadioButton android:id="@+id/opcaoVisualSCO" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="SCO - Sem condições de opinar"/>
        </RadioGroup>

        <!-- Pergunta 3 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3. O aplicativo funcionou sem travamentos ou lentidão?"
            android:layout_marginTop="16dp" />
        <RadioGroup
            android:id="@+id/radioDesempenho"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton android:id="@+id/opcaoDesempenho1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="1 - Muito Insatisfeito"/>
            <RadioButton android:id="@+id/opcaoDesempenho2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="2 - Insatisfeito"/>
            <RadioButton android:id="@+id/opcaoDesempenho3" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="3 - Parcialmente Satisfeito"/>
            <RadioButton android:id="@+id/opcaoDesempenho4" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="4 - Satisfeito"/>
            <RadioButton android:id="@+id/opcaoDesempenho5" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="5 - Muito Satisfeito"/>
            <RadioButton android:id="@+id/opcaoDesempenhoSCO" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="SCO - Sem condições de opinar"/>
        </RadioGroup>

        <!-- Pergunta 4 - Texto livre -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="4. O que você mais gostou no aplicativo?"
            android:layout_marginTop="16dp" />
        <EditText
            android:id="@+id/editGostou"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:gravity="top"
            android:hint="Digite aqui..."
            android:inputType="textMultiLine" />

        <!-- Pergunta 5 - Texto livre -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="5. O que você mudaria ou melhoraria?"
            android:layout_marginTop="16dp" />
        <EditText
            android:id="@+id/editMelhorias"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:gravity="top"
            android:hint="Digite aqui..."
            android:inputType="textMultiLine" />

        <!-- Botão Enviar -->
        <Button
            android:id="@+id/btnEnviarFeedback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enviar"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF"/>
    </LinearLayout>
</ScrollView>
